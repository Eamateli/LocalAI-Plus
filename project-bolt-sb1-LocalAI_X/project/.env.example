# LocalAI+ Configuration

# API Configuration
API_V1_STR=/v1
PROJECT_NAME=LocalAI+
VERSION=1.0.0

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEYS=test-key-12345,your-api-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
DEFAULT_MODEL=mistral:latest
MAX_TOKENS=4096
TEMPERATURE=0.7

# Vector Store Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
VECTOR_COLLECTION_NAME=localai_embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# Code Interpreter Configuration
CODE_TIMEOUT=30
CODE_MEMORY_LIMIT=128
ENABLE_CODE_EXECUTION=true
PYTHON_PACKAGES_WHITELIST=numpy,pandas,matplotlib,scipy,requests,json,math,random,datetime,os,sys

# Plugin Configuration
PLUGINS_DIRECTORY=plugins
MAX_TOOL_EXECUTION_TIME=30

# Database Configuration
DATABASE_URL=sqlite:///./localai.db

# Logging
LOG_LEVEL=INFO